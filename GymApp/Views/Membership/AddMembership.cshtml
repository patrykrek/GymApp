@{
    Layout = "_AddLayout";
}

@model GymApp.DTO.AddMembershipDTO

<div class="container">
    <form asp-controller="Membership" asp-action="AddMembershipForm">

        <h1>Add New Membership</h1>

        <div class="input-box">

            <p>Name</p>

            <input type="text" placeholder="Name" asp-for="Name"></input>

            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="input-box">

            <p>Price Per Month</p>

            <input type="number" placeholder="0.00" min="0" step="0.01" asp-for="PricePerMonth"></input>

            <span class="text-danger" asp-validation-for="PricePerMonth"></span>

        </div>
      

        <div class="btn-submit">

            <button class="btn-submit" type="submit">Add</button>

        </div>


        <div class="back-link">

            <a href="/Home/Index">Back</a>

        </div>
    </form>
</div>