@{
    Layout = "_Layout";
}

@model List<GymApp.DTO.GetUsersReservationsDTO>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>
                    Reservation Date
                </th>
                <th>
                    Training Name
                </th>
                <th>
                    Training Description
                </th>
                <th>
                    Training Date
                </th>   
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td data-lable="Reservation Date">
                        @reservation.ReservationDate
                    </td>
                    <td data-lable="Name">
                        @reservation.Training.Name
                    </td>
                    <td data-lable="Description">
                        @reservation.Training.Description
                    </td>
                    <td data-lable="Start Date">
                        @reservation.Training.StartDate
                    </td>  
                    <td>
                        <a asp-controller="Reservation"
                           asp-action="DownloadPdf"
                           asp-route-ReservationDate="@reservation.ReservationDate.ToString("o")"
                           asp-route-Name="@reservation.Training.Name"
                           asp-route-Description="@reservation.Training.Description"
                           asp-route-StartDate="@reservation.Training.StartDate.ToString("o")"
                           class="pdf-download">
                           Download Pdf 
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>





