@{
    Layout = "_Layout";
}

@model List<GymApp.DTO.GetUsersReservationsDTO>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>
                    Reservation Date
                </th>
                <th>
                    Training Name
                </th>
                <th>
                    Training Description
                </th>
                <th>
                    Training Date
                </th>                                          
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td data-lable="Reservation Date">
                        @reservation.ReservationDate
                    </td>
                    <td data-lable="Name">
                        @reservation.Training.Name
                    </td>
                    <td data-lable="Description">
                        @reservation.Training.Description
                    </td>
                    <td data-lable="Start Date">
                        @reservation.Training.StartDate
                    </td>                                                        
                </tr>
            }
        </tbody>
    </table>
</div>





